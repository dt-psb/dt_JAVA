
public class Code02_08 {
	public static void main(String[ ] args) {
		int num1,num2,result;
		
		num1= 100; //변수 num1
		num2 = 50; //변수 num2
		
		result=num1+num2; //num1 + num2을 result에 저장
		System.out.println(num1 + "+" + num2 + "="+ result ); //100 + 50 = 150 출력
		
		result=num1-num2; //num1 - num2을 result에 저장
		System.out.println(num1 + "-" + num2 + "="+ result ); //100-50=50 출력
		
		result=num1*num2; //num1 * num2을 result에 저장
		System.out.println(num1 + "*" + num2 + "="+ result );//100*50=5000 출력
		
		result=num1/num2; //num1 / num2을 result에 저장
		System.out.println(num1 + "/" + num2 + "="+ result );//100/50=2 출력
		
		
		
	}
}
